<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>Time Off</h2>

      <form action=<%= days_off_path %> method="post" class="form-inline">
        <div class="form-group">
          <input type="date" name="date" class="form-control" id="datepicker" readonly="readonly" placeholder="Date" required>
        </div>
        <div class="form-group">
          <select name="category" class="form-control" id="category">
            <option value="Sick">Sick</option>
            <option value="Vacation">Vacation</option>
            <option value="Holiday">Holiday</option>
          </select>
        </div>

        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="submit" class="btn btn-primary" value="Submit">
      </form>
    </div>
  </div>

  <div class="row top-buffer">
    <div class="col-md-4 col-md-offset-4 text-center">
      <table class="table">
        <% @days_off.list.each do |day_off| %>
          <tr>
            <td> <a href=<%= day_off.url %>><%= day_off.date %></a> </td>
            <td> <%= day_off.category %> </td>
            <td>
              <%= button_to "Remove", days_off_path,
                method: :delete,
                params: { event_id: day_off.event_id },
                data: { confirm: "Are you sure you want to delete the day off on #{day_off.date}?" },
                class: 'btn btn-danger btn-xs' %>
            </td>
          </tr>
        <% end %>
      </table>    
    </div>
  </div>
</div>
